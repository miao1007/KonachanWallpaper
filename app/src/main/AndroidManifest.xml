<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.miao1007.konakanwallpaper.activity" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- SearchBar -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <!-- 让程序可以找到Searchable Configuration -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <receiver android:name="com.github.miao1007.konakanwallpaper.receiver.DownloadReceiver" >
            <intent-filter>
                <!--监听下载完成的那一瞬间-->
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
                <action android:name="DownloadManager.ACTION_NOTIFICATION_CLICKED"/>
                <action android:name="DownloadManager.EXTRA_NOTIFICATION_CLICK_DOWNLOAD_IDS"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".GalleryActivity"
            android:label="@string/title_activity_gallery" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />

</manifest>
